<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/secondView"
    tools:context="com.example.macbookpro.lab3.NextActivity">

    <Button
        android:layout_width="200dp"
        android:layout_height="50dp"
        android:layout_marginLeft="100dp"
        android:layout_marginTop="335dp"
        android:text="Draw bitmap"
        android:textColor="#FFFFFF"
        android:background="#27125b"
        android:id="@+id/drawBitmap"
        />

    <Button
        android:layout_width="200dp"
        android:layout_height="50dp"
        android:layout_marginLeft="100dp"
        android:layout_marginTop="400dp"
        android:text="Show keyboard"
        android:textColor="#FFFFFF"
        android:background="#27125b"
        android:id="@+id/showKeyboard"
         />
    <Button
        android:layout_width="80dp"
        android:layout_height="30dp"
        android:layout_marginLeft="290dp"
        android:layout_marginTop="50dp"
        android:text="Brush"
        android:textColor="#FFFFFF"
        android:background="#27125b"
        android:id="@+id/brush"
         />

    <com.example.macbookpro.lab3.CircleDrawViewGradient
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="20dp"
        android:id="@+id/circle"
        />
    <com.example.macbookpro.lab3.RectangleDrawViewGradient
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="150dp"
        android:id="@+id/rectangle"
        />

    <com.example.macbookpro.lab3.DrawingSpace
        android:layout_width="400dp"
        android:layout_height="150dp"
        android:layout_marginTop="150dp"
        android:id="@+id/drawingSpace"
        />








</RelativeLayout>
